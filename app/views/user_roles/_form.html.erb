<%= simple_form_for(@user_role) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user , :label_method => lambda { |user| "#{user.email}"}, prompt: "choose a user", required: true %>
    <%= f.association :role ,:label_method => lambda { |role| "#{role.name}  #{role.ctrl}"}, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
