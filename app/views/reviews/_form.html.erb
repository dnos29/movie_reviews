<div class="row">
  <div class="col-md-4">
    <h1>New Review</h1>
    <%= simple_form_for([@movie, @review]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div id="star-rating"></div>
          <%= f.input :comment, as: :text %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
    <% end %>
    <script>
      $('#star-rating').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
      });
    </script>
  </div>
</div>