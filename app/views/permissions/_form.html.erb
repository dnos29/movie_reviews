<%= simple_form_for(@permission) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user_group %>
    <%= f.association :role,:label_method => lambda { |role| "#{role.name}  #{role.ctrl}"}, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
