<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,label: 'Role - Action', collection: [ "manage","index", "show", "edit", "update", "new", "create", "destroy"] %>
    <%= f.input :ctrl,label: 'Controller',collection: ["Movie", "Role","Permission","UserRole","UserGroup"] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
