<% if @movies.count != 0 %>
    <table class="table table-bordered table-striped fill">
      <thead>
      <tr>
        <th class="text-center" width="100px"><%= sortable "title" %></th>
        <th class="text-center">Image</th>
        <th class="text-center"><%= sortable "description" %></th>
        <th class="text-center"><%= sortable "length" %></th>
        <th class="text-center"><%= sortable "release_year" %></th>
        <th class="text-center"><%= sortable "user_id" %></th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @movies.each do |movie| %>
          <tr>
            <td width="100px"><%= movie.title %></td>
            <td ><%= image_tag movie.image.url(:thumb) %></td>
            <td><%= movie.description %></td>
            <td><%= movie.length %></td>
            <td class="text-center"><%= movie.release_year %></td>
            <td><%= movie.user.email %></td>
            <td><%= link_to 'Show', movie %></td>
            <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
            <td><%= link_to 'Destroy', movie, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @movies, :previous_label => t(:previous), :next_label => t(:next), class: 'pull-right' %>
<% else %>
    No results to display
<% end %>

